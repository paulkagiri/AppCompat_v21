<FrameLayout
    android:id="@+id/scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fillViewport="true"
    android:overScrollMode="never"
    tools:context=".FabActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/standalone_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/random" android:background="@android:color/white"/>

    </ScrollView>

    <!-- FAB, uses different layout file and images for shadow effect on pre L-->
    <include layout="@layout/include_add_schedule_fab"/>

</FrameLayout>



